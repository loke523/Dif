<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
let map = L.map('map').setView([55.6761, 12.5683], 13);

L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
  attribution: 'Â© OpenStreetMap'
}).addTo(map);

let activities = [];
let markers = [];

function addActivity() {
  let activity = {
    type: type.value,
    time: time.value,
    age: age.value,
    desc: desc.value,
    lat: map.getCenter().lat,
    lng: map.getCenter().lng
  };

  activities.push(activity);
  addMarker(activity);
  renderList();
}

function addMarker(a) {
  let marker = L.marker([a.lat, a.lng]).addTo(map);
  marker.bindPopup(
    `<b>${a.type}</b><br>
     â° ${a.time}<br>
     ğŸ‘¥ ${a.age}<br>
     ğŸ“ ${a.desc}`
  );
  markers.push(marker);
}

function renderList() {
  let list = document.getElementById("list");
  list.innerHTML = "";

  activities.forEach(a => {
    list.innerHTML += `
      <div class="activity">
        <b>${a.type}</b><br>
        â° ${a.time} | ğŸ‘¥ ${a.age}<br>
        ${a.desc}
      </div>
    `;
  });
}
</script>

